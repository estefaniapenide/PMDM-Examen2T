<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonNavDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAVIGATION DRAWER"
        app:layout_constraintBottom_toTopOf="@+id/buttonBottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/buttonBottomNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOTTOM NAVIGATION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonNavDraw"
        app:layout_constraintStart_toStartOf="@+id/buttonNavDraw"
        app:layout_constraintTop_toBottomOf="@+id/buttonNavDraw" />
</androidx.constraintlayout.widget.ConstraintLayout>